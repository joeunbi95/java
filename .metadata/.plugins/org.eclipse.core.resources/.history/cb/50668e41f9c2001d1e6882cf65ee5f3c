package product;

import java.util.ArrayList;

public class product {
	
	private String menu;
	private int price;
	
	public product(){}
	
	public product(String menu, int price) {
		this.menu=menu;
		this.price=price;		
	}
	
	public void printMenu() {
		System.out.println("==== 메뉴판 ====");		
		System.out.println("1.햄버거 $7000");
		System.out.println("2.피자 $12000");
		System.out.println("3.콜라 $2000");
		System.out.println("4.치킨너겟 $2000");
		System.out.println("5.아이스크림 $500");		
	}

	public String getMenu() {
		return menu;
	}

	public void setMenu(String menu) {
		this.menu = menu;
	}

	public int getPrice() {
		return price;
	}

	public void setPrice(int price) {
		this.price = price;
	}
}
